                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="SharpEditor" MinHeight="200" MinWidth="200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="MenuItem">
                <MenuItem Header="MenuItem" />
                <MenuItem Header="MenuItem" />
                <MenuItem Header="MenuItem" />
            </MenuItem>
            <MenuItem Header="MenuItem" />
        </Menu>
        <ScrollViewer Grid.Row="1">
            <RichTextBox x:Name="HostTextBox" MinHeight="200" MinWidth="200" BorderThickness="0,1,0,0" />
        </ScrollViewer>
    </Grid>
</controls:MetroWindow>